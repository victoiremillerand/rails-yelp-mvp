<h1>Restaurants#show</h1>

<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.category %></p>
  <ul>
    <% @restaurant.reviews.each do |review|  %>
    <li> content : <%= review.content %> | rating : <%= review.rating %></li>
    <% end %>
  </ul>
  <p><%= link_to "back to list", restaurants_path%></p>
  <p><%= link_to "add a review", new_restaurant_review_path(@restaurant)%></p>
</div>
